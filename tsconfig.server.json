{
  "compilerOptions": {
    "outDir": "./dist/server",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ]
  },
  "include": [
    "server/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}